<!DOCTYPE html>
<html>
<head>
  <title>Barterville</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">

      <div class="row">
        <div class="span12">
            <div class="navbar navbar-inverse">
              <div class="navbar-inner">
                <%= link_to "Barterville", root_path,  :class => 'brand' %>
                  <ul class="nav">
                    <li class="active"> <%= "Welcome, #{@auth.name}" if @auth %></li>
                    <%= display_links %>
                  </ul><!-- .nav -->
              </div><!-- .navbar-inner -->
            </div><!-- .navbar navbar-inverse -->
          </div><!-- .span12 -->
      </div><!-- .row -->

      <div class="row">
          <div class="span3"> 
          </div>
          <div class="span9"> <%= yield %> </div>
      </div>

      <div class="row">
        <div class="span12"> </div>
      </div>

  </div>

</body>
</html>
