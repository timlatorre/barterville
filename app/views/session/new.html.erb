
<h1>Login</h1>

<%= form_tag do %>
  <div class="field">    
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

  <div class="field">    
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

  <div class="field">
    <%= submit_tag 'Login' %><br />
  </div>
  
<% end %>