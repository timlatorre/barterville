<h1>Register</h1>

<%= form_tag do %>
  
  <div class='field'>
    <%= label_tag 'username' %>
    <%= text_field_tag 'register[name]' %>
  </div>
  
  <div class='field'>
    <%= label_tag 'password' %>
    <%= password_field_tag 'register[password]' %>
  </div>
  
  <div class='field'>
    <%= label_tag 'confirmation' %>
    <%= password_field_tag 'register[password_confirmation]'%>
  </div>
  
  <div class='field'>
    <%= submit_tag 'Register' %>
  </div>

<% end %>